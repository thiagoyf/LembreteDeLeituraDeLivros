<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/custom_dimen_10dp">


    <ImageView
        android:id="@+id/livro_imagem"
        android:background="#FFFFFF"
        android:layout_width="@dimen/image_dimen_100dp"
        android:layout_height="@dimen/image_dimen_160dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/custom_dimen_10dp">

        <TextView
            android:id="@+id/livro_nome"
            style="@style/CustomTextView"
            android:layout_marginBottom="@dimen/custom_dimen_10dp" />

        <TextView
            android:id="@+id/livro_totalPaginas"
            style="@style/CustomTextView" />

    </LinearLayout>

</LinearLayout>
