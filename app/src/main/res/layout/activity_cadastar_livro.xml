<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/custom_dimen_10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            style="@style/CustomTextView"
            android:text="@string/cadastrarLivro_txtCapaLivro"/>

        <ImageView
            android:id="@+id/cadastrarLivro_imgLivro"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_gravity="center"
            android:onClick="pegaImagem"
            android:layout_width="100dp"
            android:layout_height="160dp" />

        <TextView
            style="@style/CustomTextView"
            android:text="@string/cadastrarLivro_txtNome" />

        <EditText
            android:id="@+id/cadastrarLivro_edtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:hint="@string/cadastrarLivro_hintNome"
            android:inputType="text"/>

        <TextView
            style="@style/CustomTextView"
            android:text="@string/cadastrarLivro_txtTotalPaginas" />

        <EditText
            android:id="@+id/cadastrarLivro_edtTotalDePaginas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:hint="@string/cadastrarLivro_hintTotalPaginas"
            android:inputType="number" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="cadastrarLivro"
            android:text="@string/cadastrarLivro_btnCadastrar" />
    </LinearLayout>

</ScrollView>
